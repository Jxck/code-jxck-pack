{
  "name": "jxck",
  "displayName": "jxck",
  "publisher": "jxck",
  "description": "jxck extension pack",
  "version": "4.0.11",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:subtitles"
  ],
  "contributes": {
    "commands": [
      {
        "command": "jxck.translate",
        "title": "Jxck: Translate En->Jp"
      },
      {
        "command": "jxck.highlight",
        "title": "Jxck: Highlight vtt"
      },
      {
        "command": "jxck.proofread",
        "title": "Jxck: Proofreading"
      },
      {
        "command": "jxck.proofreadAll",
        "title": "Jxck: Proofreading full file"
      }
    ],
    "keybindings": [
      {
        "command": "jxck.translate",
        "when": "editorTextFocus",
        "key": "ctrl+t"
      }
    ],
    "configuration": {
      "title": "jxck",
      "properties": {
        "jxck.deepl_auth_key": {
          "type": "string",
          "default": null,
          "description": "Deepl API Key"
        },
        "jxck.deepl_target_lang": {
          "type": "string",
          "default": "JA",
          "description": "Deepl Target Lang"
        },
        "jxck.deepl_free_api": {
          "type": "boolean",
          "default": true,
          "description": "Deepl Free API"
        },
        "jxck.openai_auth_key": {
          "type": "string",
          "default": null,
          "description": "OpenAI API Key"
        },
        "jxck.openai_api_url": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "OpenAI API URL"
        },
        "jxck.openai_model": {
          "type": "string",
          "default": "gpt-4",
          "description": "OpenAI Model Name"
        },
        "jxck.openai_prompt": {
          "type": "string",
          "default": "文章の誤字、脱字、スペルミスを修正してください。",
          "description": "OpenAI Prompt"
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "fmt": "prettier -w src/**/*.ts *.json *.js *.md",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.86.0",
    "@vscode/test-electron": "^2.3.9",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vsce": "^2.14.0",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@jxck/markdown": "^0.4.0",
    "deepl": "^1.0.13"
  },
  "__metadata": {
    "id": "5d4e8b8b-05fc-45f2-b6f2-daf5d21f5645",
    "publisherDisplayName": "jxck",
    "publisherId": "938d491a-143c-44ad-ba8e-7713e200ac9b",
    "isPreReleaseVersion": false
  }
}
