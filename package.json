{
  "name": "jxck",
  "displayName": "jxck",
  "publisher": "jxck",
  "description": "jxck extension pack",
  "version": "0.2.3",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:jxck.translate"
  ],
  "contributes": {
    "commands": [
      {
        "command": "jxck.translate",
        "title": "Translate En->Jp"
      }
    ],
    "keybindings": [
      {
        "command": "jxck.translate",
        "when": "editorTextFocus",
        "key": "ctrl+t"
      }
    ],
    "configuration": {
      "title": "jxck",
      "properties": {
        "jxck.deepl_auth_key": {
          "type": "string",
          "default": null,
          "description": "Deepl API Key"
        },
        "jxck.deepl_target_lang": {
          "type": "string",
          "default": "JA",
          "description": "Deepl Target Lang"
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "17.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.13.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "vsce": "^2.7.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@jxck/markdown": "^0.0.9",
    "deepl": "^1.0.13"
  }
}
